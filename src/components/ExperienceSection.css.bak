.experience-section {
  padding: 24px;
overflow: hidden;
  position: relative;
max-width: 100%;
}

.experience-section h2 {
  font-size: 2rem;
  margin-bottom: 24px;
  color: var(--text-primary);
}

.experience-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 20px;
}

.experience-item {
  height: auto;
  margin-bottom: 0;
padding: 20px;
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid var(--card-border);
  border-radius: 16px;
  transition: transform 0.3s ease;
  display: flex !important;
  flex-direction: column;
}

.experience-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  background: rgba(255, 255, 255, 0.05);
}

.experience-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
margin-bottom: 12px;
  padding-bottom: 8px;
  border-bottom: 1px solid var(--card-border);
}

.experience-header h3 {
  font-size: 1.4rem;
  color: var(--text-primary);
margin: 0;
}

.experience-date {
  font-size: 0.9rem;
  color: var(--text-secondary);
padding: 4px 8px;
  background: rgba(93, 84, 199, 0.1);
  border-radius: 20px;
}

.experience-details {
  color: var(--text-secondary);
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 5px 0;
}

.experience-details p {
  margin-bottom: 12px;
  line-height: 1.5;
}

.experience-details strong {
  color: var(--text-primary);
}

.experience-details a {
  color: var(--primary);
text-decoration: none;
  transition: color 0.3s ease;
}

.experience-details a:hover {
  color: var(--accent);
text-decoration: underline;
}

.functions-list {
  list-style-type: disc;
  padding-left: 20px;
  margin-top: 4px;
  margin-bottom: 0;
}

.functions-list li {
  margin-bottom: 6px;
}

@media (max-width: 768px) {
  .experience-section {
    padding: 20px;
    }
  
    .experience-grid {
      grid-template-columns: 1fr;
    }
  
    .experience-item {
      padding: 20px;
    }
  
    .experience-header {
    flex-direction: column;
    gap: 8px;
  }

    .experience-date {
      align-self: flex-start;
  }
}

@media (max-width: 480px) {
  .experience-section {
    padding: 16px;
  }

    .experience-item {
      padding: 16px;
  }

    .experience-header h3 {
      font-size: 1.2rem;
  
}
